<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Gray color when pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color for normal state -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#2196F3" /> <!-- Blue stroke -->
        </shape>
    </item>
</selector>
